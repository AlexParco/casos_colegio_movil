<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mensajeCard"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/mensajeCardChild"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#f0f0f0"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msgUser"
            android:text="name :"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/msgBody"
            android:layout_toEndOf="@+id/msgUser"
            android:layout_width="245dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDelete"
            android:text="X"
            android:textColor="@color/black"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/btnSucces"
            android:padding="0dp"
            android:layout_width="30sp"
            android:backgroundTint="#cccccc"
            android:layout_height="40sp"/>
        <Button
            android:id="@+id/btnSucces"
            android:layout_alignParentEnd="true"
            android:text=">"
            android:padding="0dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:layout_width="30sp"
            android:backgroundTint="#cccccc"
            android:layout_height="40sp"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:padding="0dp"
            android:layout_below="@+id/btnDelete"
            android:layout_alignParentEnd="true"
            android:text="no-revisado"
            android:textColor="#cc0000"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

