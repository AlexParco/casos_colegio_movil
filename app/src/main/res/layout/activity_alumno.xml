<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.view.AlumnoActivity">

    <EditText
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:hint="ingrese un mensaje"
        android:paddingLeft="11dp"
        android:id="@+id/mensajeInput"
        android:layout_width="340dp"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnSend"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/mensajeInput"
        android:backgroundTint="#cccccc"
        android:padding="0dp"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_below="@+id/mensajeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mensajesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:listitem="@layout/item_mensaje" />

    </LinearLayout>


</RelativeLayout>
